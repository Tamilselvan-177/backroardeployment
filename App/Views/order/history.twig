{% extends 'base.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="py-10 bg-[var(--body-bg)]">
    <div class="container mx-auto px-4">
        <h1 class="text-3xl md:text-4xl font-bold mb-8 text-[var(--brand-heading)]">Order History</h1>

        {% if session.flash.success %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            {{ session.flash.success }}
        </div>
        {% endif %}

        {% if session.flash.error %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            {{ session.flash.error }}
        </div>
        {% endif %}

        {% if orders|length > 0 %}
        <div class="space-y-4">
            {% for order in orders %}
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="p-6">
                    <!-- Order Header -->
                    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-4">
                        <div>
                            <h3 class="text-lg font-bold text-[var(--brand-text)] mb-1">
                                Order #{{ order.order_number }}
                            </h3>
                            <p class="text-sm text-gray-500">Placed on {{ order.created_at|date('d M Y, h:i A') }}</p>
                        </div>
                        <div class="flex flex-wrap items-center gap-3">
                            <!-- Order Status Badge -->
                            {% if order.order_status == 'Pending' %}
                                <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm font-semibold">Pending</span>
                            {% elseif order.order_status == 'Confirmed' %}
                                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold">Confirmed</span>
                            {% elseif order.order_status == 'Processing' %}
                                <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-sm font-semibold">Processing</span>
                            {% elseif order.order_status == 'Shipped' %}
                                <span class="px-3 py-1 bg-indigo-100 text-indigo-800 rounded-full text-sm font-semibold">Shipped</span>
                            {% elseif order.order_status == 'Delivered' %}
                                <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-semibold">Delivered</span>
                            {% elseif order.order_status == 'Cancelled' %}
                                <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm font-semibold">Cancelled</span>
                            {% endif %}

                            <!-- Payment Status Badge -->
                            {% if order.payment_status == 'Pending' %}
                                <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded-full text-sm font-semibold">Payment Pending</span>
                            {% elseif order.payment_status == 'Paid' %}
                                <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-semibold">Paid</span>
                            {% elseif order.payment_status == 'Failed' %}
                                <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm font-semibold">Payment Failed</span>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Order Info Grid -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-4 border-t border-b border-[var(--card-border)]">
                        <div>
                            <p class="text-sm text-gray-500 mb-1">Total Amount</p>
                            <p class="text-xl font-bold text-[var(--brand-text)]">â‚¹{{ order.total_amount|number_format(2) }}</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 mb-1">Payment Method</p>
                            <p class="font-semibold">{{ order.payment_method }}</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 mb-1">Delivery Address</p>
                            <p class="font-semibold text-sm">{{ order.shipping_name }}</p>
                            <p class="text-xs text-gray-600">{{ order.shipping_city }}, {{ order.shipping_state }}</p>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-wrap gap-3 mt-4">
                        <a href="{{ app_url }}/order/{{ order.order_number }}" class="px-4 py-2 bg-[var(--brand-primary)] text-white rounded-lg font-semibold hover:bg-[var(--brand-primary-hover)] transition-colors text-sm">
                            View Details
                        </a>
                        
                        {% if order.order_status in ['Pending', 'Confirmed'] %}
                        <form method="POST" action="{{ app_url }}/order/cancel" class="inline" onsubmit="return confirm('Are you sure you want to cancel this order?')">
                            <input type="hidden" name="_token" value="{{ csrf_token }}">
                            <input type="hidden" name="order_id" value="{{ order.id }}">
                            <button type="submit" class="px-4 py-2 border border-red-600 text-red-600 rounded-lg font-semibold hover:bg-red-50 transition-colors text-sm">
                                Cancel Order
                            </button>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Pagination -->
        {% if pagination.total_pages > 1 %}
        <div class="flex justify-center gap-2 mt-8">
            {% if pagination.current_page > 1 %}
            <a href="?page={{ pagination.current_page - 1 }}" class="px-4 py-2 border border-[var(--card-border)] rounded-lg hover:bg-[var(--card-bg-alt)] transition-colors">
                Previous
            </a>
            {% endif %}

            {% for page in 1..pagination.total_pages %}
                {% if page == pagination.current_page %}
                <span class="px-4 py-2 bg-[var(--brand-primary)] text-white rounded-lg font-semibold">{{ page }}</span>
                {% else %}
                <a href="?page={{ page }}" class="px-4 py-2 border border-[var(--card-border)] rounded-lg hover:bg-[var(--card-bg-alt)] transition-colors">{{ page }}</a>
                {% endif %}
            {% endfor %}

            {% if pagination.current_page < pagination.total_pages %}
            <a href="?page={{ pagination.current_page + 1 }}" class="px-4 py-2 border border-[var(--card-border)] rounded-lg hover:bg-[var(--card-bg-alt)] transition-colors">
                Next
            </a>
            {% endif %}
        </div>
        {% endif %}

        {% else %}
        <!-- Empty State -->
        <div class="bg-white rounded-lg shadow p-12 text-center">
            <div class="text-6xl mb-4">ðŸ“¦</div>
            <h2 class="text-2xl font-bold mb-2 text-[var(--brand-text)]">No Orders Yet</h2>
            <p class="text-gray-600 mb-6">You haven't placed any orders yet. Start shopping to see your orders here!</p>
            <a href="{{ app_url }}/products" class="inline-block px-6 py-3 bg-[var(--brand-primary)] text-white rounded-lg font-bold hover:bg-[var(--brand-primary-hover)] transition-colors">
                Start Shopping
            </a>
        </div>
        {% endif %}
    </div>
</section>
{% endblock %}