{% extends 'base.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="py-10 bg-[var(--body-bg)]">
    <div class="container mx-auto px-4 max-w-4xl">
        <!-- Back Button -->
        <a href="{{ app_url }}/orders" class="inline-flex items-center text-[var(--brand-primary)] hover:text-[var(--brand-primary-hover)] mb-6 font-semibold">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Orders
        </a>

        <h1 class="text-3xl font-bold mb-6 text-[var(--brand-heading)]">Order Details</h1>

        {% if session.flash.success %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            {{ session.flash.success }}
        </div>
        {% endif %}

        <!-- Order Summary Card -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
                <div>
                    <h2 class="text-xl font-bold text-[var(--brand-text)] mb-2">Order #{{ order.order_number }}</h2>
                    <p class="text-sm text-gray-500">Placed on {{ order.created_at|date('d M Y, h:i A') }}</p>
                </div>
                <div class="flex flex-wrap gap-2">
                    <!-- Order Status -->
                    {% if order.order_status == 'Pending' %}
                        <span class="px-4 py-2 bg-yellow-100 text-yellow-800 rounded-full font-semibold">Pending</span>
                    {% elseif order.order_status == 'Confirmed' %}
                        <span class="px-4 py-2 bg-blue-100 text-blue-800 rounded-full font-semibold">Confirmed</span>
                    {% elseif order.order_status == 'Processing' %}
                        <span class="px-4 py-2 bg-purple-100 text-purple-800 rounded-full font-semibold">Processing</span>
                    {% elseif order.order_status == 'Shipped' %}
                        <span class="px-4 py-2 bg-indigo-100 text-indigo-800 rounded-full font-semibold">Shipped</span>
                    {% elseif order.order_status == 'Delivered' %}
                        <span class="px-4 py-2 bg-green-100 text-green-800 rounded-full font-semibold">Delivered</span>
                    {% elseif order.order_status == 'Cancelled' %}
                        <span class="px-4 py-2 bg-red-100 text-red-800 rounded-full font-semibold">Cancelled</span>
                    {% endif %}

                    {% if order.coupon_code %}
                        <span class="px-4 py-2 bg-purple-100 text-purple-800 rounded-full text-sm font-semibold">
                            Coupon: {{ order.coupon_code }}
                        </span>
                    {% endif %}
                </div>
            </div>

            <!-- Order Progress -->
            {% if order.order_status != 'Cancelled' %}
            <div class="relative mb-8">
                <div class="flex justify-between items-center">
                    {% set statuses = ['Pending', 'Confirmed', 'Processing', 'Shipped', 'Delivered'] %}
                    {% set current_index = 0 %}
                    {% for status in statuses %}
                        {% if status == order.order_status %}
                            {% set current_index = loop.index0 %}
                        {% endif %}
                    {% endfor %}

                    {% for status in statuses %}
                    <div class="flex flex-col items-center flex-1 relative">
                        <div class="w-10 h-10 rounded-full flex items-center justify-center mb-2 z-10 {% if loop.index0 <= current_index %}bg-[var(--brand-primary)] text-white{% else %}bg-gray-200 text-gray-500{% endif %}">
                            {% if loop.index0 < current_index %}
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            {% else %}
                            {{ loop.index }}
                            {% endif %}
                        </div>
                        <p class="text-xs font-semibold text-center {% if loop.index0 <= current_index %}text-[var(--brand-primary)]{% else %}text-gray-500{% endif %}">{{ status }}</p>
                        
                        {% if loop.index0 < statuses|length - 1 %}
                        <div class="absolute top-5 left-1/2 w-full h-0.5 {% if loop.index0 < current_index %}bg-[var(--brand-primary)]{% else %}bg-gray-200{% endif %}" style="transform: translateY(-50%);"></div>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            <!-- Order Items -->
            <h3 class="font-bold text-lg mb-4 text-[var(--brand-text)]">Order Items</h3>
            <div class="space-y-4 mb-6">
                {% for item in order_items %}
                <div class="flex gap-4 pb-4 border-b border-[var(--card-border)] last:border-b-0">
                    <div class="w-20 h-20 bg-[var(--card-bg-alt)] rounded overflow-hidden flex-shrink-0">
                        {% if item.image_path %}
                        <img src="{{ item.image_path }}" alt="{{ item.product_name }}" class="w-full h-full object-cover">
                        {% else %}
                        <div class="w-full h-full flex items-center justify-center text-3xl">ðŸ“¦</div>
                        {% endif %}
                    </div>
                    <div class="flex-1">
                        {% if item.product_slug %}
                        <a href="{{ app_url }}/product/{{ item.product_slug }}" class="font-semibold text-[var(--brand-text)] hover:text-[var(--brand-primary)] block mb-1">
                            {{ item.product_name }}
                        </a>
                        {% else %}
                        <p class="font-semibold text-[var(--brand-text)] mb-1">{{ item.product_name }}</p>
                        {% endif %}
                        <p class="text-sm text-gray-600">Quantity: {{ item.quantity }}</p>
                        <p class="text-sm text-gray-600">Price: â‚¹{{ item.price|number_format(2) }} each</p>
                    </div>
                    <div class="text-right">
                        <p class="font-bold text-lg text-[var(--brand-text)]">â‚¹{{ item.subtotal|number_format(2) }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>

            <!-- Price Breakdown -->
            <div class="bg-[var(--card-bg-alt)] rounded-lg p-4 space-y-2">
                <div class="flex justify-between text-gray-600">
                    <span>Subtotal</span>
                    <span class="font-semibold">â‚¹{{ order.subtotal|number_format(2) }}</span>
                </div>

                {% if order.discount_amount > 0 %}
                <div class="flex justify-between text-green-600 font-semibold">
                    <span>Discount{% if order.coupon_code %} ({{ order.coupon_code }}){% endif %}</span>
                    <span>-â‚¹{{ order.discount_amount|number_format(2) }}</span>
                </div>
                {% endif %}

                <div class="flex justify-between text-gray-600">
                    <span>Shipping Charge</span>
                    {% if order.shipping_charge == 0 %}
                    <span class="font-semibold text-green-600">FREE</span>
                    {% else %}
                    <span class="font-semibold">â‚¹{{ order.shipping_charge|number_format(2) }}</span>
                    {% endif %}
                </div>

                <div class="border-t border-[var(--card-border)] pt-2">
                    <div class="flex justify-between text-lg font-bold text-[var(--brand-text)]">
                        <span>Total Amount</span>
                        <span>â‚¹{{ order.total_amount|number_format(2) }}</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delivery Address & Payment -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Delivery Address -->
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="font-bold text-lg mb-4 text-[var(--brand-text)]">Delivery Address</h3>
                <div class="space-y-1 text-gray-700">
                    <p class="font-semibold">{{ order.shipping_name }}</p>
                    <p class="text-sm">{{ order.shipping_address }}</p>
                    <p class="text-sm">{{ order.shipping_city }}, {{ order.shipping_state }} - {{ order.shipping_pincode }}</p>
                    <p class="text-sm">Phone: {{ order.shipping_phone }}</p>
                </div>
            </div>

            <!-- Payment Information -->
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="font-bold text-lg mb-4 text-[var(--brand-text)]">Payment Information</h3>
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Payment Method</span>
                        <span class="font-semibold">{{ order.payment_method }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Payment Status</span>
                        {% if order.payment_status == 'Pending' %}
                            <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm font-semibold">Pending</span>
                        {% elseif order.payment_status == 'Paid' %}
                            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-semibold">Paid</span>
                        {% elseif order.payment_status == 'Failed' %}
                            <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm font-semibold">Failed</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        {% if order.order_status in ['Pending', 'Confirmed'] %}
        <div class="mt-6 flex gap-4">
            <form method="POST" action="{{ app_url }}/order/cancel" onsubmit="return confirm('Are you sure you want to cancel this order?')">
                <input type="hidden" name="_token" value="{{ csrf_token }}">
                <input type="hidden" name="order_id" value="{{ order.id }}">
                <button type="submit" class="px-6 py-3 border-2 border-red-600 text-red-600 rounded-lg font-bold hover:bg-red-50 transition-colors">
                    Cancel Order
                </button>
            </form>
        </div>
        {% endif %}
    </div>
</section>
{% endblock %}
