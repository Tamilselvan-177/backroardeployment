{% extends "base.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<style>
    /* Page background – simple light gray */
    .login-shell {
        background: radial-gradient(circle at top, #f9fafb 0%, #e5e7eb 40%, #f3f4f6 100%);
    }

    /* Card entrance */
    @keyframes loginFadeUp {
        from { opacity: 0; transform: translateY(24px) scale(0.98); }
        to   { opacity: 1; transform: translateY(0) scale(1); }
    }

    /* Small float for icon circle */
    @keyframes loginFloat {
        0%,100% { transform: translateY(0); }
        50%     { transform: translateY(-6px); }
    }

    .login-card {
        animation: loginFadeUp .45s ease-out;
        background: #ffffff;
        border-radius: 1.25rem;
        box-shadow:
          0 18px 45px rgba(15,23,42,0.18),
          0 0 0 1px rgba(148,163,184,0.35);
        border: 1px solid rgba(148,163,184,0.45);
    }

    .login-title {
        letter-spacing: .22em;
        text-transform: uppercase;
    }

    .login-chip {
        display:inline-flex;
        align-items:center;
        gap:.4rem;
        padding:.25rem .7rem;
        border-radius:999px;
        background:#020617;
        color:#f9fafb;
        font-size:.65rem;
        letter-spacing:.14em;
        text-transform:uppercase;
    }

    /* Inputs */
    .login-input {
        border-radius:.9rem;
        border:1px solid #d1d5db;
        background:#f9fafb;
        transition:all .2s ease;
    }
    .login-input::placeholder { color:#9ca3af; }
    .login-input:focus {
        background:#ffffff;
        border-color:#020617;
        box-shadow:
          0 0 0 1px #020617,
          0 0 0 4px rgba(15,23,42,0.10);
        outline:none;
        transform:translateY(-1px);
    }

    .login-label {
        font-size:.78rem;
        letter-spacing:.12em;
        text-transform:uppercase;
        color:#6b7280;
    }

    /* Button */
    .login-btn {
        position:relative;
        overflow:hidden;
        border-radius:.9rem;
        background: #020617;
        color:#f9fafb;
        font-weight:600;
        transition:all .25s ease;
        box-shadow:0 18px 40px rgba(15,23,42,0.55);
    }
    .login-btn::before{
        content:'';
        position:absolute;
        top:50%;left:50%;
        width:0;height:0;
        border-radius:999px;
        background:rgba(249,250,251,0.16);
        transform:translate(-50%,-50%);
        transition:width .45s ease,height .45s ease;
    }
    .login-btn:hover{
        transform:translateY(-1px);
    }
    .login-btn:hover::before{
        width:260px;
        height:260px;
    }

    /* Links */
    .login-link {
        position:relative;
        color:#020617;
        font-weight:500;
        transition:color .2s ease;
    }
    .login-link::after{
        content:'';
        position:absolute;
        left:0;bottom:-2px;
        width:0;height:1px;
        background:#020617;
        transition:width .2s ease;
    }
    .login-link:hover{
        color:#000000;
    }
    .login-link:hover::after{
        width:100%;
    }

    /* Flash boxes */
    .login-flash {
        border-radius:.9rem;
        font-size:.85rem;
    }
</style>

<section class="py-14 min-h-screen flex items-center login-shell">
    <div class="container mx-auto px-4">
        <div class="max-w-md mx-auto login-card p-8 md:p-9">
            <!-- Small badge + title -->
            <div class="flex flex-col items-center mb-6">
                <div class="login-chip mb-3">
                    <span class="w-2 h-2 rounded-full bg-white animate-[loginFloat_3s_ease-in-out_infinite]"></span>
                    <span>Secure Login</span>
                </div>
                <h2 class="login-title text-[0.8rem] md:text-sm text-center text-[var(--brand-heading)] tracking-[0.3em]">
                    Login to BlackRoar
                </h2>
            </div>
            
            {% if session.flash.success %}
                <div class="login-flash mb-4 p-4 bg-green-50 border border-green-400 text-green-700">
                    {{ session.flash.success }}
                </div>
            {% endif %}

            {% if session.flash.error %}
                <div class="login-flash mb-4 p-4 bg-red-50 border border-red-400 text-red-700">
                    {{ session.flash.error }}
                </div>
            {% endif %}

            {% if errors.login %}
                <div class="login-flash mb-4 p-4 bg-red-50 border border-red-400 text-red-700">
                    {{ errors.login }}
                </div>
            {% endif %}

            <form method="POST" action="{{ app_url }}/login" class="space-y-5">
                <input type="hidden" name="_token" value="{{ csrf_token }}">

                <!-- Email -->
                <div>
                    <label for="email" class="login-label block mb-2">Email Address</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        value="{{ old.email }}" 
                        class="login-input w-full px-4 py-3"
                        placeholder="you@example.com"
                        required
                    />
                    {% if errors.email %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.email }}</p>
                    {% endif %}
                </div>

                <!-- Password -->
                <div>
                    <label for="password" class="login-label block mb-2">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="login-input w-full px-4 py-3"
                        placeholder="••••••••"
                        required
                    />
                    {% if errors.password %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.password }}</p>
                    {% endif %}
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="flex items-center justify-between text-xs md:text-sm text-gray-700">
                    <label class="flex items-center gap-2 cursor-pointer">
                        <input type="checkbox" name="remember" class="rounded border-gray-300 text-black focus:ring-black">
                        <span>Remember me</span>
                    </label>
                    <a href="{{ app_url }}/forgot-password" class="login-link">
                        Forgot Password?
                    </a>
                </div>

                <!-- Submit Button -->
                <button 
                    type="submit" 
                    class="login-btn w-full py-3.5 px-4 mt-2"
                >
                    Login
                </button>
            </form>

            <!-- Register Link -->
            <p class="mt-6 text-center text-xs md:text-sm text-gray-700">
                Don't have an account? 
                <a href="{{ app_url }}/register" class="login-link">
                    Register here
                </a>
            </p>
        </div>
    </div>
</section>
{% endblock %}
