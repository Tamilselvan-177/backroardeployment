{% extends 'base.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="py-10 bg-[var(--body-bg)]">
    <div class="container mx-auto px-4">
        <h1 class="text-3xl md:text-4xl font-bold mb-8 text-[var(--brand-heading)]">Shopping Cart</h1>

        {% if session.flash.success %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            {{ session.flash.success }}
        </div>
        {% endif %}

        {% if session.flash.error %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            {{ session.flash.error }}
        </div>
        {% endif %}

        {% if cart_items|length > 0 %}
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Cart Items -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow overflow-hidden">
                    {% for item in cart_items %}
                    <div class="flex flex-col sm:flex-row gap-4 p-4 border-b border-[var(--card-border)] last:border-b-0" data-unit-price="{{ item.sale_price ? item.sale_price : item.price }}" data-cart-item-id="{{ item.id }}">
                        <!-- Product Image -->
                        <div class="w-full sm:w-32 h-32 bg-[var(--card-bg-alt)] rounded-lg overflow-hidden flex-shrink-0">
                            {% if item.image_path %}
<img src="{{ item.image_path }}" alt="{{ item.product_name }}" class="w-full h-full object-contain">
                            {% else %}
                            <div class="w-full h-full flex items-center justify-center text-4xl">üì¶</div>
                            {% endif %}
                        </div>

                        <!-- Product Details -->
                        <div class="flex-1 min-w-0">
                            <a href="{{ app_url }}/product/{{ item.product_slug }}" class="text-lg font-semibold text-[var(--brand-text)] hover:text-[var(--brand-primary)] block mb-2">
                                {{ item.product_name }}
                            </a>
                            
                            {% if item.brand_name %}
                            <p class="text-sm text-gray-500 mb-1">Brand: {{ item.brand_name }}</p>
                            {% endif %}
                            
                            {% if item.model_name %}
                            <p class="text-sm text-gray-500 mb-2">Model: {{ item.model_name }}</p>
                            {% endif %}

                            <div class="flex items-center gap-2 mb-3">
                                {% if item.sale_price %}
                                <span class="text-xl font-bold text-red-600">‚Çπ{{ item.sale_price }}</span>
                                <span class="text-sm text-gray-500 line-through">‚Çπ{{ item.price }}</span>
                                {% else %}
                                <span class="text-xl font-bold text-[var(--brand-text)]">‚Çπ{{ item.price }}</span>
                                {% endif %}
                            </div>

                            <!-- Quantity Controls -->
                            <div class="flex flex-wrap items-center gap-4">
                                <form method="POST" action="{{ app_url }}/cart/update" class="flex items-center border border-[var(--card-border)] rounded-lg overflow-hidden">
                                    <input type="hidden" name="_token" value="{{ csrf_token }}">
                                    <input type="hidden" name="cart_item_id" value="{{ item.id }}">
                                    <button type="button" onclick="decreaseQty(this)" class="px-3 py-2 bg-[var(--card-bg-alt)] hover:bg-gray-200 font-bold">-</button>
                                    <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="{{ item.stock_quantity }}" class="w-16 text-center border-x border-[var(--card-border)] py-2 outline-none" readonly>
                                    <button type="button" onclick="increaseQty(this)" class="px-3 py-2 bg-[var(--card-bg-alt)] hover:bg-gray-200 font-bold">+</button>
                                </form>

                                <!-- Remove Button -->
                                <form method="POST" action="{{ app_url }}/cart/remove" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token }}">
                                    <input type="hidden" name="cart_item_id" value="{{ item.id }}">
                                    <button type="submit" class="text-red-600 hover:text-red-700 font-semibold text-sm" onclick="return confirm('Remove this item?')">Remove</button>
                                </form>
                            </div>

                            <!-- Stock Warning -->
                            {% if item.quantity > item.stock_quantity %}
                            <p class="text-red-600 text-sm mt-2">‚ö†Ô∏è Only {{ item.stock_quantity }} items available</p>
                            {% endif %}
                        </div>

                            <!-- Item Subtotal -->
                            <div class="text-right sm:text-left lg:text-right item-subtotal">
                                <p class="text-sm text-gray-500 mb-1">Subtotal</p>
                                {% set item_price = item.sale_price ? item.sale_price : item.price %}
                                <p class="text-xl font-bold text-[var(--brand-text)]">‚Çπ{{ (item_price * item.quantity)|number_format(2) }}</p>
                            </div>
                    </div>
                    {% endfor %}
                </div>

                <!-- Clear Cart -->
                <div class="mt-4">
                    <form method="POST" action="{{ app_url }}/cart/clear" class="inline">
                        <input type="hidden" name="_token" value="{{ csrf_token }}">
                        <button type="submit" class="text-red-600 hover:text-red-700 font-semibold" onclick="return confirm('Clear entire cart?')">Clear Cart</button>
                    </form>
                </div>
            </div>

            <!-- Order Summary -->
                    <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow p-6 sticky top-20">
                    <h2 class="text-xl font-bold mb-6 text-[var(--brand-text)]">Order Summary</h2>

                    <div class="space-y-3 mb-6">
                        <div class="flex justify-between text-gray-600">
                            <span>Subtotal (<span id="order-items">{{ totals.total_items }}</span> items)</span>
                            <span id="order-subtotal" class="font-semibold">‚Çπ{{ totals.subtotal|number_format(2) }}</span>
                        </div>
                        <div class="flex justify-between text-gray-600">
                            <span>Shipping</span>
                            {% if totals.subtotal >= 999 %}
                            <span id="order-shipping" class="font-semibold text-green-600">FREE</span>
                            {% else %}
                            <span id="order-shipping" class="font-semibold">‚Çπ{{ totals.shipping|number_format(2) }}</span>
                            {% endif %}
                        </div>
                        <div class="border-t border-[var(--card-border)] pt-3">
                            <div class="flex justify-between text-lg font-bold text-[var(--brand-text)]">
                                <span>Total</span>
                                <span id="order-total">‚Çπ{{ totals.total|number_format(2) }}</span>
                            </div>
                        </div>
                    </div>

                    {% if totals.subtotal < 999 %}
                    <p class="text-sm text-gray-600 bg-yellow-50 border border-yellow-200 rounded-lg p-3 mb-4">
                        Add ‚Çπ{{ (999 - totals.subtotal)|number_format(2) }} more for FREE shipping! üöö
                    </p>
                    {% endif %}

                    <a href="{{ app_url }}/checkout" class="block w-full px-6 py-3 bg-[var(--brand-primary)] text-white rounded-lg text-center font-bold hover:bg-[var(--brand-primary-hover)] transition-colors mb-3">
                        Proceed to Checkout
                    </a>

                    <a href="{{ app_url }}/categories" class="block w-full px-6 py-3 border border-[var(--card-border)] text-center rounded-lg hover:bg-[var(--card-bg-alt)] font-semibold transition-colors">
                        Continue Shopping
                    </a>
                </div>
            </div>
        </div>

        {% else %}
        <!-- Empty Cart -->
        <div class="bg-white rounded-lg shadow p-12 text-center">
            <div class="text-6xl mb-4">üõí</div>
            <h2 class="text-2xl font-bold mb-2 text-[var(--brand-text)]">Your Cart is Empty</h2>
            <p class="text-gray-600 mb-6">Looks like you haven't added anything to your cart yet.</p>
            <a href="{{ app_url }}/categories" class="inline-block px-6 py-3 bg-[var(--brand-primary)] text-white rounded-lg font-bold hover:bg-[var(--brand-primary-hover)]">
                Start Shopping
            </a>
        </div>
        {% endif %}
    </div>
</section>

<script>
function increaseQty(btn) {
    const input = btn.parentElement.querySelector('input[name="quantity"]');
    const max = parseInt(input.getAttribute('max')) || 9999;
    const current = parseInt(input.value);
    if (current < max) {
        input.value = current + 1;
        sendQtyUpdate(btn);
    }
}

function decreaseQty(btn) {
    const input = btn.parentElement.querySelector('input[name="quantity"]');
    const current = parseInt(input.value);
    if (current > 1) {
        input.value = current - 1;
        sendQtyUpdate(btn);
    }
}

function sendQtyUpdate(btn) {
    // Find the surrounding form and cart item id
    const form = btn.closest('form');
    const cartItemId = form.querySelector('input[name="cart_item_id"]').value;
    const qtyInput = form.querySelector('input[name="quantity"]');
    const quantity = qtyInput.value;

    const fd = new FormData();
    fd.append('cart_item_id', cartItemId);
    fd.append('quantity', quantity);

    fetch('{{ app_url }}/cart/update', {
        method: 'POST',
        body: fd,
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
            }).then(r => r.json()).then(data => {
        if (data.success) {
            // update order summary
            if (data.totals) {
                const totals = data.totals;
                const subtotalEl = document.getElementById('order-subtotal');
                const itemsEl = document.getElementById('order-items');
                const shippingEl = document.getElementById('order-shipping');
                const totalEl = document.getElementById('order-total');
                if (subtotalEl) subtotalEl.textContent = '‚Çπ' + Number(totals.subtotal).toFixed(2);
                if (itemsEl) itemsEl.textContent = totals.total_items || totals.total_items === 0 ? totals.total_items : itemsEl.textContent;
                if (shippingEl) {
                    if (totals.subtotal >= 999) shippingEl.textContent = 'FREE';
                    else shippingEl.textContent = '‚Çπ' + Number(totals.shipping || 0).toFixed(2);
                }
                if (totalEl) totalEl.textContent = '‚Çπ' + Number(totals.total).toFixed(2);
            }

            // update header cart badge if present
            try {
                const badge = document.getElementById('cartCount');
                if (badge) {
                    const count = data.totals && data.totals.total_items ? data.totals.total_items : 0;
                    badge.textContent = count;
                    if (count > 0) badge.classList.remove('hidden'); else badge.classList.add('hidden');
                }
            } catch(e) { /* ignore */ }

            // update this item's subtotal display using unit price data attribute
            const cartItemContainer = form.closest('[data-unit-price]');
            if (cartItemContainer) {
                const unit = parseFloat(cartItemContainer.getAttribute('data-unit-price')) || 0;
                const subtotalNode = cartItemContainer.querySelector('.item-subtotal p.text-xl');
                // find the element that shows the price (last p with text-xl)
                const subtotalEl = cartItemContainer.querySelector('.item-subtotal .text-xl');
                if (subtotalEl) {
                    subtotalEl.textContent = '‚Çπ' + (unit * Number(quantity)).toFixed(2);
                }
            }
        } else {
            // optional: show an error (flash)
            alert(data.message || 'Failed to update cart');
        }
    }).catch(err => {
        console.error('Cart update failed', err);
    });
}
</script>
{% endblock %}