/* WISHLIST FLOAT BUTTON LOGIC */
const wishlistBtn = document.getElementById('wishlistToggleBtn');

if (wishlistBtn) {
    wishlistBtn.addEventListener('click', async () => {
        if (wishlistBtn.dataset.requiresLogin === '1') {
            window.location.href = '{{ app_url }}/login';
            return;
        }

        const inWishlist =
            wishlistBtn.dataset.in_wishlist === '1' ||
            wishlistBtn.dataset.inWishlist === '1';

        const productId = wishlistBtn.dataset.productId;
        const endpoint  = inWishlist ? '/wishlist/remove' : '/wishlist/add';

        wishlistBtn.disabled = true;

        const iconEl  = wishlistBtn.querySelector('.icon');
        const labelEl = wishlistBtn.querySelector('.label');
        if (labelEl) {
            labelEl.textContent = inWishlist ? 'Removing‚Ä¶' : 'Saving‚Ä¶';
        }

        const payload = new URLSearchParams();
        payload.append('product_id', productId);
        payload.append('_token', window.CSRF_TOKEN);

        try {
            const response = await fetch('{{ app_url }}' + endpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: payload.toString()
            });
            const data = await response.json();

            if (data.success) {
                const nowInWishlist = inWishlist ? '0' : '1';
                wishlistBtn.dataset.inWishlist  = nowInWishlist;
                wishlistBtn.dataset.in_wishlist = nowInWishlist;

                if (nowInWishlist === '1') {
                    if (iconEl)  iconEl.textContent  = '‚ù§Ô∏è';
                    if (labelEl) labelEl.textContent = 'Wishlist';
                    wishlistBtn.classList.add('bg-green-50','border-green-600','text-green-700');
                } else {
                    if (iconEl)  iconEl.textContent  = 'ü§ç';
                    if (labelEl) labelEl.textContent = 'Save';
                    wishlistBtn.classList.remove('bg-green-50','border-green-600','text-green-700');
                }
            } else {
                alert(data.message || 'Unable to update wishlist');
                if (iconEl && labelEl) {
                    if (inWishlist) {
                        iconEl.textContent  = '‚ù§Ô∏è';
                        labelEl.textContent = 'Wishlist';
                    } else {
                        iconEl.textContent  = 'ü§ç';
                        labelEl.textContent = 'Save';
                    }
                }
            }
        } catch (error) {
            console.error('Wishlist toggle failed', error);
            alert('Something went wrong. Please try again.');
            if (iconEl && labelEl) {
                if (inWishlist) {
                    iconEl.textContent  = '‚ù§Ô∏è';
                    labelEl.textContent = 'Wishlist';
                } else {
                    iconEl.textContent  = 'ü§ç';
                    labelEl.textContent = 'Save';
                }
            }
        } finally {
            wishlistBtn.disabled = false;
        }
    });
}

