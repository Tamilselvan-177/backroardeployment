/* REVIEW SUBMIT */
const submitReviewBtn = document.getElementById('submitReviewBtn');
if (submitReviewBtn) {
    submitReviewBtn.addEventListener('click', async () => {
        const rating  = parseInt(ratingInput.value, 10);
        const title   = document.getElementById('reviewTitle').value.trim();
        const comment = document.getElementById('reviewComment').value.trim();
        const productId = submitReviewBtn.closest('#reviewFormContainer').dataset.productId;

        if (!rating || rating < 1 || rating > 5) {
            alert('Please select a rating.');
            return;
        }

        submitReviewBtn.disabled = true;
        submitReviewBtn.textContent = 'Submitting...';

        const payload = new URLSearchParams();
        payload.append('product_id', productId);
        payload.append('rating', rating);
        payload.append('title', title);
        payload.append('comment', comment);
        payload.append('_token', window.CSRF_TOKEN);

        try {
            const response = await fetch('{{ app_url }}/reviews', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: payload.toString()
            });
            const data = await response.json();
            alert(data.message || 'Review submitted');
            if (data.success) {
                document.getElementById('reviewTitle').value = '';
                document.getElementById('reviewComment').value = '';
                starButtons.forEach(btn => btn.classList.remove('active'));
                ratingInput.value = 0;
            }
        } catch (error) {
            console.error('Review submission failed', error);
            alert('Could not submit review right now.');
        } finally {
            submitReviewBtn.disabled = false;
            submitReviewBtn.textContent = 'Submit Review';
        }
    });
}

/* SCROLL ANIMATIONS */
const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
};

const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
        if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
        }
    });
}, observerOptions);

document.querySelectorAll('.animate-fade-in-up, .animate-slide-in-left').forEach(el => {
    observer.observe(el);
});
