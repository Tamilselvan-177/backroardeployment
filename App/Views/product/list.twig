{% extends 'base.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<section class="py-10 bg-[var(--body-bg)]">
    <div class="container mx-auto px-4">
        <!-- Header + sort -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
            <div>
                <p class="text-xs md:text-sm uppercase text-gray-500 tracking-[0.2em]">All products</p>
                <h1 class="text-3xl md:text-4xl font-black text-[var(--brand-heading)] tracking-wide">
                    Browse collection
                </h1>
                <p class="text-gray-500 text-sm mt-2">
                    Latest arrivals, best sellers and everyday essentials from BlackRoar.
                </p>
            </div>
            <form method="GET" class="flex flex-col sm:flex-row gap-3 items-stretch sm:items-center">
                <label class="text-xs md:text-sm text-gray-500 uppercase tracking-wide">Sort by</label>
                <select name="sort"
                        class="px-4 py-2 border border-[var(--card-border)] rounded-lg text-sm focus:ring-2 focus:ring-[var(--brand-primary)] outline-none bg-white"
                        onchange="this.form.submit()">
                    <option value="p.created_at DESC" {% if pagination.sort == 'p.created_at DESC' %}selected{% endif %}>Newest first</option>
                    <option value="p.price ASC"       {% if pagination.sort == 'p.price ASC' %}selected{% endif %}>Price: Low to High</option>
                    <option value="p.price DESC"      {% if pagination.sort == 'p.price DESC' %}selected{% endif %}>Price: High to Low</option>
                    <option value="p.name ASC"        {% if pagination.sort == 'p.name ASC' %}selected{% endif %}>Name: A to Z</option>
                </select>
            </form>
        </div>

        {% if products|length > 0 %}
        <!-- Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {% for product in products %}
            <a href="{{ app_url }}/product/{{ product.slug }}"
               class="group bg-white rounded-2xl shadow-sm hover:shadow-2xl transition-all duration-300 overflow-hidden border border-[var(--card-border)] flex flex-col">
                <!-- Image -->
                <div class="relative aspect-[4/5] bg-[var(--card-bg-alt)] flex items-center justify-center overflow-hidden">
                    {% if product.image_path %}
          <img src="{{ product.image_path }}"
     alt="{{ product.name }}"
     class="w-full h-full object-contain transition-transform duration-500 group-hover:scale-105"
     loading="lazy" decoding="async">

                    {% else %}
                        <span class="text-4xl">üì¶</span>
                    {% endif %}
                    {% if product.sale_price %}
                        <span class="absolute left-3 top-3 bg-red-600 text-white text-[10px] uppercase tracking-[0.16em] px-2 py-1 rounded-full">
                            Sale
                        </span>
                    {% endif %}
                </div>

                <!-- Body -->
                <div class="p-4 flex-1 flex flex-col gap-2">
                    {% if product.brand_name %}
                    <p class="text-[10px] uppercase tracking-[0.18em] text-gray-500">
                        {{ product.brand_name }}
                    </p>
                    {% endif %}

                    <h3 class="font-semibold text-[var(--brand-text)] text-sm md:text-base line-clamp-2 group-hover:text-[var(--brand-primary)]">
                        {{ product.name }}
                    </h3>

                    <div class="mt-1 flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            {% if product.sale_price %}
                                <span class="text-lg font-bold text-black">‚Çπ{{ product.sale_price }}</span>
                                <span class="text-xs text-gray-500 line-through">‚Çπ{{ product.price }}</span>
                            {% else %}
                                <span class="text-lg font-bold text-[var(--brand-text)]">‚Çπ{{ product.price }}</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
        {% else %}
        <!-- Empty state -->
        <div class="bg-white rounded-xl shadow p-10 text-center max-w-xl mx-auto">
            <div class="text-6xl mb-4">üõçÔ∏è</div>
            <h2 class="text-2xl font-bold mb-2 text-[var(--brand-text)]">No products found</h2>
            <p class="text-gray-600 mb-6">
                Try a different sort option or explore categories.
            </p>
            <a href="{{ app_url }}/categories"
               class="inline-block px-6 py-3 bg-[var(--brand-primary)] text-white rounded-lg font-semibold hover:bg-[var(--brand-primary-hover)]">
                Browse categories
            </a>
        </div>
        {% endif %}

        {% if pagination.total_pages > 1 %}
        <!-- Pagination -->
        <div class="flex justify-center gap-2 mt-10">
            {% for page in 1..pagination.total_pages %}
                {% if page == pagination.current_page %}
                    <span class="px-4 py-2 bg-[var(--brand-navbar)] text-white rounded-lg font-semibold text-sm">
                        {{ page }}
                    </span>
                {% else %}
                    <a href="?page={{ page }}{% if pagination.sort %}&sort={{ pagination.sort|url_encode }}{% endif %}"
                       class="px-4 py-2 border border-[var(--card-border)] rounded-lg text-sm hover:bg-[var(--card-bg-alt)] transition">
                        {{ page }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
        {% endif %}
    </div>
</section>
{% endblock %}
