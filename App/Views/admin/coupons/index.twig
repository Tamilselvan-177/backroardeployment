{% extends 'base.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block styles %}
<style>
    .admin-coupon-page { background: #f9fafb; min-height: calc(100vh - 64px); }
    .coupon-badge { 
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
    }
    .coupon-badge.active { background: #d1fae5; color: #065f46; }
    .coupon-badge.inactive { background: #fee2e2; color: #991b1b; }
    .coupon-badge.expired { background: #e5e7eb; color: #374151; }
</style>
{% endblock %}

{% block content %}
<section class="admin-coupon-page py-10">
    <div class="container mx-auto px-4">
        <!-- Header -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Manage Coupons</h1>
                <p class="text-sm text-gray-500 mt-1">Create and manage discount coupons</p>
            </div>
            <div class="flex gap-3">
                <a href="{{ app_url }}/admin" 
                   class="px-4 py-2 border border-gray-300 rounded-lg text-sm font-semibold hover:bg-gray-50">
                    ← Back to Dashboard
                </a>
                <a href="{{ app_url }}/admin/coupons/create" 
                   class="px-6 py-2 bg-black text-white rounded-lg text-sm font-semibold hover:bg-gray-800">
                    + Create Coupon
                </a>
            </div>
        </div>

        {% if session.flash.success %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            {{ session.flash.success }}
        </div>
        {% endif %}

        {% if session.flash.error %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            {{ session.flash.error }}
        </div>
        {% endif %}

        <!-- Coupons Table -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            {% if coupons|length > 0 %}
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Code</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Discount</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Valid Period</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Usage</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {% for coupon in coupons %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">
                                <div class="font-bold text-gray-900">{{ coupon.code }}</div>
                                {% if coupon.description %}
                                <div class="text-xs text-gray-500 mt-1">{{ coupon.description }}</div>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-700">
                                {% if coupon.type == 'PERCENT' %}
                                    <span class="text-blue-600 font-semibold">Percentage</span>
                                {% else %}
                                    <span class="text-green-600 font-semibold">Fixed Amount</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm font-semibold text-gray-900">
                                {% if coupon.type == 'PERCENT' %}
                                    {{ coupon.value }}%
                                    {% if coupon.max_discount_amount > 0 %}
                                        <div class="text-xs text-gray-500">Max: ₹{{ coupon.max_discount_amount|number_format(0) }}</div>
                                    {% endif %}
                                {% else %}
                                    ₹{{ coupon.value|number_format(0) }}
                                {% endif %}
                                {% if coupon.min_order_amount > 0 %}
                                    <div class="text-xs text-gray-500">Min: ₹{{ coupon.min_order_amount|number_format(0) }}</div>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-700">
                                <div>{{ coupon.valid_from|date('d M Y') }}</div>
                                <div class="text-gray-500">to {{ coupon.valid_to|date('d M Y') }}</div>
                            </td>
                            <td class="px-6 py-4 text-sm">
                                <div class="font-semibold text-gray-900">{{ coupon.usage_count }} uses</div>
                                {% if coupon.usage_limit > 0 %}
                                    <div class="text-xs text-gray-500">Limit: {{ coupon.usage_limit }}</div>
                                {% endif %}
                                {% if coupon.per_user_limit > 0 %}
                                    <div class="text-xs text-gray-500">Per user: {{ coupon.per_user_limit }}</div>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                {% set now = "now"|date('Y-m-d') %}
                                {% set expired = (coupon.valid_to|date('Y-m-d') < now) %}
                                
                                {% if expired %}
                                    <span class="coupon-badge expired">Expired</span>
                                {% elseif coupon.is_active %}
                                    <span class="coupon-badge active">Active</span>
                                {% else %}
                                    <span class="coupon-badge inactive">Inactive</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center justify-center gap-2">
                                    <a href="{{ app_url }}/admin/coupons/{{ coupon.id }}/edit" 
                                       class="text-blue-600 hover:text-blue-800 font-semibold text-sm">
                                        Edit
                                    </a>
                                    
                                    <form method="POST" action="{{ app_url }}/admin/coupons/{{ coupon.id }}/toggle" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token }}">
                                        <button type="submit" class="text-amber-600 hover:text-amber-800 font-semibold text-sm">
                                            {{ coupon.is_active ? 'Deactivate' : 'Activate' }}
                                        </button>
                                    </form>
                                    
                                    {% if coupon.usage_count == 0 %}
                                    <form method="POST" action="{{ app_url }}/admin/coupons/{{ coupon.id }}/delete" 
                                          class="inline"
                                          onsubmit="return confirm('Are you sure you want to delete this coupon?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token }}">
                                        <button type="submit" class="text-red-600 hover:text-red-800 font-semibold text-sm">
                                            Delete
                                        </button>
                                    </form>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if pagination.total_pages > 1 %}
            <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-gray-700">
                        Showing {{ coupons|length }} of {{ pagination.total }} coupons
                    </div>
                    <div class="flex gap-2">
                        {% if pagination.current_page > 1 %}
                        <a href="?page={{ pagination.current_page - 1 }}" 
                           class="px-4 py-2 border border-gray-300 rounded-lg text-sm font-semibold hover:bg-gray-100">
                            Previous
                        </a>
                        {% endif %}
                        
                        {% if pagination.current_page < pagination.total_pages %}
                        <a href="?page={{ pagination.current_page + 1 }}" 
                           class="px-4 py-2 border border-gray-300 rounded-lg text-sm font-semibold hover:bg-gray-100">
                            Next
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endif %}
            {% else %}
            <div class="p-12 text-center">
                <p class="text-gray-500 mb-4">No coupons found.</p>
                <a href="{{ app_url }}/admin/coupons/create" 
                   class="inline-block px-6 py-2 bg-black text-white rounded-lg font-semibold hover:bg-gray-800">
                    Create Your First Coupon
                </a>
            </div>
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}
